<div class=" title-go-back-block">
	<div class="go-back">
		<% if defined? path %>
			<%= link_to image_tag('go_back_icon.svg', id: 'go-back-image'), path %>
		<% end %>
	</div>
	<div class="title-block title">
			<%= title %>
	</div>
	<div class="go-back"></div>
</div>

<style>
	.title {
		font-size: 40px;
		color: #575756;
		font-style: oblique;
		padding-top: 2.5%;
		padding-bottom: 3%;
	}

	.go-back{
		width: 15%;
		display: inline-block;
		padding-top: 3%;
		padding-bottom: 3%;
		display: flex; /* add */
		float: left;
		justify-content: center; /* add to align horizontal */
		align-items: center; /* add to align vertical */

	}

	.go-back a{
		height: max-content;
		text-align: center;
	}

	#go-back-image{
		width: 33px;
		top: 0;
		bottom: 0;
		left: 0;
		right: 0;
		margin: auto;
		float: left;
	}

	.title-block{
		width: 70%;
		display: inline-block;
	}

	.title-go-back-block{
		width: 100%;
		height: 97px;
		display: inline-flex;
		margin-bottom: 2%;
		margin-top: 2%;
	}


</style>