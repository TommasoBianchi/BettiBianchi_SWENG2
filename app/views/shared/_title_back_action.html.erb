<div class=" title-go-back-block">
	<div class="go-back">
		<% if defined? path %>
			<%= link_to image_tag('go_back_icon.png', id: 'go-back-image'), path %>
		<% end %>
	</div>
	<div class="title-block">
		<h1 class="title">
			<%= title %>
		</h1>
	</div>
	<div class="go-back"></div>
</div>

<style>
	.title {
		font-size: 40px;
		color: #575756;
		font-style: oblique;
	}

	.go-back{
		width: 25%;
		display: inline-block;
		padding-top: 3%;
		padding-bottom: 3%;
		display: flex; /* add */
		justify-content: center; /* add to align horizontal */
		align-items: center; /* add to align vertical */

	}

	.go-back a{
		height: max-content;
	}

	#go-back-image{
		max-height: 100%;
		max-width: 100%;
		width: auto;
		height: auto;
		top: 0;
		bottom: 0;
		left: 0;
		right: 0;
		margin: auto;
		float: left;
	}

	.title-block{
		width: 50%;
		display: inline-block;
	}

	.title-go-back-block{
		width: 100%;
		height: 97px;
		display: inline-flex;
		margin-bottom: 2%;
		margin-top: 2%;
	}


</style>