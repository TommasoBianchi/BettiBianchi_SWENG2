<% unless defined? day_link %>
	<% day_link = calendar_day_path DateTime.now.year, DateTime.now.month, DateTime.now.day %>
<% end %>
<% unless defined? week_link %>
	<% week_number = DateTime.now.strftime("%W").to_i %>
	<% week_number -= 1 unless DateTime.now.wday == 1 %>
	<% week_link = calendar_week_path DateTime.now.year, week_number %>
<% end %>
<% unless defined? month_link %>
	<% month_link = calendar_month_path DateTime.now.year, DateTime.now.month %>
<% end %>

<footer>
	<div id="footerLinks">
		<a href="#" title="create-meeting">Create Meeting</a>
		<a href="<%= day_link %>" title="calendar-day">Day</a>
		<a href="<%= week_link %>" title="calendar-week">Week</a>
		<a href="<%= month_link %>" title="calendar-month">Month</a>
  </div>
</footer>